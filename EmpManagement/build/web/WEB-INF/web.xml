<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DoLogin</servlet-name>
        <servlet-class>com.erevmax.empmng.services.DoLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddEmployee</servlet-name>
        <servlet-class>com.erevmax.empmng.services.AddEmployee</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddImage</servlet-name>
        <servlet-class>com.erevmax.empmng.services.AddImage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoLogin</servlet-name>
        <url-pattern>/DoLogin</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DoLogout</servlet-name>
        <servlet-class>com.erevmax.empmng.services.DoLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoLogout</servlet-name>
        <url-pattern>/DoLogout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>doApplyLeave</servlet-name>
        <servlet-class>com.erevmax.empmng.services.doApplyLeave</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doApplyLeave</servlet-name>
        <url-pattern>/doApplyLeave</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>com.erevmax.empmng.services.ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DoActivationStatusChange</servlet-name>
        <servlet-class>com.erevmax.empmng.services.DoActivationStatusChange</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoActivationStatusChange</servlet-name>
        <url-pattern>/DoActivationStatusChange</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteLeaveRequest</servlet-name>
        <servlet-class>com.erevmax.empmng.services.deleteLeaveRequest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteLeaveRequest</servlet-name>
        <url-pattern>/deleteLeaveRequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddEmployee</servlet-name>
        <url-pattern>/AddEmployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddImage</servlet-name>
        <url-pattern>/AddImage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
